{
  "name": "universal",
  "private": true,
  "version": "0.0.1",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite --mode electron",
    "dev:telegram": "vite --mode telegram",
    "dev:chrome": "vite --mode chrome",
    "dev:cordova": "cross-env MODE=cordova vue-cli-service serve",
    "build": "vue-tsc -b && vite build",
    "build:chrome": "vue-tsc -b && vite build --mode chrome",
    "build:telegram": "vue-tsc -b && vite build --mode telegram",
    "build:electron": "vue-tsc -b && vite build --mode electron",
    "build:electron:app": "vite build --mode electron && electron-builder",
    "build:cordova": "vue-cli-service build",
    "preview": "vite preview",
    "preview:chrome": "vite preview --outDir dist-chrome",
    "preview:telegram": "vite preview --outDir dist-telegram",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "sizecheck": "npx vite-bundle-visualizer",
    "cordova:build-android": "cross-env CORDOVA_PLATFORM=android vue-cli-service cordova-build-android",
    "cordova:build-android-apk": "cross-env CORDOVA_PLATFORM=android vue-cli-service cordova-build-only-www-android && cd cordova && cordova build android --packageType=apk",
    "cordova:build-ios": "cross-env CORDOVA_PLATFORM=ios vue-cli-service cordova-build-ios",
    "cordova:build-only-www-android": "cross-env CORDOVA_PLATFORM=android vue-cli-service cordova-build-only-www-android",
    "cordova:build-only-www-ios": "cross-env CORDOVA_PLATFORM=ios vue-cli-service cordova-build-only-www-ios",
    "cordova:prepare": "vue-cli-service cordova-prepare",
    "cordova:serve-android": "cross-env CORDOVA_PLATFORM=android vue-cli-service cordova-serve-android",
    "cordova:serve-ios": "cross-env CORDOVA_PLATFORM=ios vue-cli-service cordova-serve-ios"
  },
  "dependencies": {
    "fluent-vue": "^3.6.0",
    "register-service-worker": "^1.7.2",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^3.0.4",
    "vue-cli-plugin-cordova": "^2.4.1",
    "vue-tsc": "^2.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
