<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.universal.guru" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>universal</name>
    <description>Sample Apache Cordova App</description>
    <author email="contact@universal.guru" href="https://universal.guru">
        universal
    </author>

    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />

    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <preference name="android-minSdkVersion" value="31"/>
    <preference name="android-targetSdkVersion" value="34"/>

    <access origin="*" />
    <allow-navigation href="*"/>
    <platform name="electron">
        <icon src="icons/android-chrome-192x192.png" target="app"/>
        <icon src="icons/android-chrome-192x192.png" target="installer"/>
    </platform>
</widget>
